<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="stfStatefulLayout">
        <attr name="stfAnimationEnabled" format="boolean" />
        <attr name="stfInAnimation" format="reference" />
        <attr name="stfOutAnimation" format="reference" />
        <attr name="stfDefaultState" format="integer">
            <enum name="inProgress" value="0" />
            <enum name="connectionError" value="1" />
            <enum name="unknownError" value="2" />
            <enum name="emptyContent" value="3" />
            <enum name="hasContent" value="4" />
        </attr>
    </declare-styleable>
</resources>